{
  "name": "devfolio",
  "version": "1.0.0",
  "description": "AI-powered finance TUI for developers who invest",
  "type": "module",
  "bin": {
    "devfolio": "dist/ink-entry.js",
    "devfolio-legacy": "dist/index.js"
  },
  "main": "./dist/ink-entry.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsx watch src/ink-entry.tsx",
    "dev:legacy": "echo 'DEPRECATED: Use npm run dev instead' && tsx watch src/index.tsx",
    "build": "tsup",
    "start": "node dist/ink-entry.js",
    "start:legacy": "echo 'DEPRECATED: Use npm start instead' && node dist/index.js",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "finance",
    "tui",
    "terminal",
    "stocks",
    "portfolio",
    "ai",
    "cli"
  ],
  "author": "Armando Blancas",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/blancas-armando/devfolio.git"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@inkjs/ui": "^2.0.0",
    "@mozilla/readability": "^0.6.0",
    "asciichart": "^1.5.25",
    "better-sqlite3": "^11.6.0",
    "chalk": "^5.3.0",
    "dotenv": "^16.4.7",
    "groq-sdk": "^0.8.0",
    "ink": "^5.1.0",
    "ink-spinner": "^5.0.0",
    "ink-text-input": "^6.0.0",
    "jimp": "^1.6.0",
    "jsdom": "^27.3.0",
    "openai": "^6.15.0",
    "react": "^18.3.1",
    "yahoo-finance2": "^3.10.2",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@testing-library/react-hooks": "^8.0.1",
    "@types/better-sqlite3": "^7.6.12",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^22.10.2",
    "@types/react": "^18.3.14",
    "ink-testing-library": "^4.0.0",
    "react-test-renderer": "^19.2.3",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^4.0.16"
  }
}
